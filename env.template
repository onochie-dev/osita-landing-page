# Osita Environment Variables
# Copy this file to .env and fill in your actual API keys

# ========================================
# WEBAPP (apps/webapp) - Supabase Auth
# ========================================
# Get these from your Supabase project: https://supabase.com/dashboard
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# API URL (production only - leave blank for local dev which uses Vite proxy)
# VITE_API_URL=https://api.osita.eu

# ========================================
# LANDING (apps/landing) - Next.js
# ========================================
# Webapp URL for login redirect
NEXT_PUBLIC_WEBAPP_URL=http://localhost:5173

# ========================================
# API (apps/api) - FastAPI Backend
# ========================================

# OpenAI API Key for structured extraction
OPENAI_API_KEY=your_openai_api_key_here

# Fine-tuned model ID (optional - leave empty to use default GPT-4)
# After fine-tuning, add your model ID here, e.g.: ft:gpt-4o-mini:your-org::abc123
OPENAI_FINETUNED_MODEL=

# Mistral AI API Key for OCR processing
MISTRAL_API_KEY=your_mistral_api_key_here

# Application Settings
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
DATABASE_URL=sqlite:///./osita.db
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50

# CORS origins (comma-separated, for production add your domains)
# Default: http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173
# Production example: https://osita.eu,https://app.osita.eu
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# Optional: Debug mode
DEBUG=false

